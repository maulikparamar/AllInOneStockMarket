
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login_view</title>
</head>
<body>
    <h1 style="text-align:center;">Welcome To Admin Panel</h1>
    <div style="display: flex; gap: 10%; justify-content: space-around;">



        <div><button style="width: 220%; height: 390%; font-size: 21px; background-color: aquamarine;" onclick="clientDetailshow()">Client Details</button></div>
        <div><button style="width: 220%; height: 390%; font-size: 21px; background-color: burlywood;" onclick="ordersDetailshow()">Orders Details</button></div>
    </div>
    <script>

        function findLocalStorege() {
            if (localStorage.getItem("jwt") == null) {
                window.location.href = "/AllInOneStock/LoginPage"
            }
        }

        findLocalStorege();

        function clientDetailshow() {
            window.location.href = "/AllInOneStock/ClientsList"
        }
        function ordersDetailshow() {
            window.location.href = "/AllInOneStock/OrdersList"
        }
    </script>
</body>
</html>
