
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login_view</title>
  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <form id="contactForm1">
            <label for="userId">Enter UserId</label>
            <input id="userId" class="form-control" name="UserId" type="text" />
            <label for="userId">Enter Password</label>
            <input id="password" class="form-control" name="Password" type="password" />
            <label for="userId">Enter Verification Code</label>
            <input id="verificationcode" class="form-control" name="VerificationCode" type="number" />
            <input id="userType" name="type" value="0" hidden />
        </form>
        <button id="submit" onclick="contactForm1Click()" class="btn btn-primary">submit</button>
    </div>

    <script type="text/javascript">

        function convertFormToJSON(form) {
            return $(form)
                .serializeArray()
                .reduce(function (json, { name, value }) {
                    json[name] = value;
                    return json;
                }, {});
        }

        function contactForm1Click() {
            console.log(convertFormToJSON($('#contactForm1')));
            $.ajax({
                url: 'Authentication',
                type: 'POST',
               // async: false,
                dataType: 'json',
                processData: false,
                contentType: "application/json; charset=utf-8",
                data: convertFormToJSON($('#contactForm1')),
                success: function (res) {
                    console.log(res);
                }
            });
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
</body>
</html>
